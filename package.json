{
  "dependencies": {
    "@ghostery/adblocker-electron": "^2.1.1",
    "@xhayper/discord-rpc": "^1.2.0",
    "cross-fetch": "^4.0.0",
    "discord.js-selfbot-v13": "^3.4.5",
    "dotenv": "^16.4.7",
    "electron-forge": "^5.2.4",
    "express": "^5.1.0",
    "gyp": "^0.5.0",
    "node-addon-api": "^8.3.0",
    "node-gyp": "^11.0.0",
    "nodemon": "^3.1.7"
  },
  "name": "scloudrpc",
  "description": "SoundCloudRPC",
  "version": "1.0.2",
  "main": "main.js",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-prebuilt-compile": "8.2.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.github.1sheol.soundcloud-discord-rpc",
    "productName": "SoundCloudRPC",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "icons/icon.ico"
    },
    "linux": {
      "category": "Audio;AudioVideo",
      "target": [
        "snap",
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "twitchOverlay.js",
      "overlay.html",
      "start.js",
      "build.js",
      "package.json",
      "icons/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.test.js"
    ],
    "extraFiles": [
      {
        "from": "overlay.html",
        "to": "overlay.html"
      },
      {
        "from": "twitchOverlay.js", 
        "to": "twitchOverlay.js"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Ivy-js",
        "repo": "soundcloud-rpc"
      }
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "app": "node -e \"require('./start.js')\"",
    "dev": "npx electron --trace-warnings ./main.js",
    "build": "npx electron-builder build",
    "build:win": "npx electron-builder build --win",
    "build:mac": "npx electron-builder build --mac",
    "build:linux": "npx electron-builder build --linux",
    "build:all": "npx electron-builder build --win --mac --linux",
    "winmake": "npm run build:win",
    "release": "npx electron-builder build --publish=always"
  },
  "keywords": [],
  "author": {
    "name": "1sheol",
    "email": "contact@1sheol.xyz"
  },
  "license": "ISC",
  "homepage": "https://github.com/Ivy-js/SCloudRPC"
}